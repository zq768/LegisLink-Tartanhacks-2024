<!DOCTYPE html>
<html>
<head>
	<title>{{post.title}}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="css/styles.css">
	<link rel="stylesheet" type="text/css" href="css/4_user.css">
</head><br>
<body>
    <div id="inner">
        <!--<div id="title">
            <center><h1>{{post.title}}</h1></center>
        </div>-->
		<div class="section" id="policies">
			<h3>My Policies</h3>
			{{#each posts}}
				<div class="comment">
					<h4>{{title}}</h4>
					<p>{{content}}</p>
				</div>
			{{/each}}
		</div>
		<div id="right-divs">
			<div class="section" id="recommend">
				<center><h3>Recommendations</h3></center>
				{{#each recs}}
					<div class="rec" onclick="window.location.href='http://localhost:3000/post?id=1'">
						{{this}}
					</div>
				{{/each}}
			</div>
			<div class="section" id="map">
				<center><h3>Support</h3></center>
				<img src = "./img/map.jpg"/>
			</div>
		</div>
    </div>
	<script type="text/javascript" src="js/4_user.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</html>